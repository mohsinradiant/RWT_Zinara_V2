<div class="page-width own-design-container">
  <div class="own-design-header-container">
    <div>
      <img src="https://cdn.shopify.com/s/files/1/0661/8336/4792/files/Expand_Arrow_2.png?v=1745235024">
      <p>Get your Own Design</p>
    </div>
    <button>WhatsApp Us</button>
  </div>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const images = document.querySelectorAll('.own-design-header-container img');
      const button = document.querySelector('.own-design-header-container button');

      if (images.length > 0) {
        images[0].addEventListener('click', () => {
          window.history.back();
        });

        if (button) {
          button.addEventListener('click', () => {
            window.open('https://wa.me/918851812814', '_blank');
          });
        }
      }
    });
  </script>

  <h2 class="section-heading">{{ section.settings.heading }}</h2>
  <div class="own-design-images-container">
    {% for block in section.blocks %}
      <div class="own-design-image">
        <img src="{{ block.settings.image | img_url: 'master' }}">
        <div>
          <h3>{{ block.settings.heading }}</h3>
          <p>{{ block.settings.description }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
  <h2 class="section-heading">{{ section.settings.heading_2 }}</h2>
  {{ section.settings.description }}
</div>

<section class="page-width two_blocks_grid-section-container">
  {% for block in section.blocks %}
    <div class="two_blocks_grid-section">
      <div class="two_blocks_grid-section-left">
        <h2 class="section-heading">{{ block.settings.heading }}</h2>
        <p>{{ block.settings.sub_heading }}</p>
        <div>
          <a href="{{ block.settings.url_1 }}">{{ block.settings.button_1 }}</a>
        </div>
      </div>
      <div class="two_blocks_grid-section-right">
        <img src="{{ block.settings.image | img_url: 'master' }}" alt="Try at Home">
      </div>
    </div>
  {% endfor %}
</section>
<style>
  .two_blocks_grid-section-container {
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }
  .two_blocks_grid-section {
    display: flex;
    overflow: hidden;
    width: 48%;
    position: relative;
  }
  .two_blocks_grid-section-right {
    position: absolute;
    width: 100%;
  }
  .two_blocks_grid-section-right img {
    width: 100%;
  }
</style>
{% schema %}
{
  "name": "2 Blocks Grid",
  "blocks": [
    {
      "type": "content",
      "name": "Content Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Section Heading",
          "default": "Get your own design"
        },
        {
          "type": "text",
          "id": "sub_heading",
          "label": "Sub Heading",
          "default": "Have another design in mind? Something from a website or a magazine perhaps?"
        },
        {
          "type": "text",
          "id": "button_1",
          "label": "Button 1 Text",
          "default": "Start Designing"
        },
        {
          "type": "url",
          "id": "url_1",
          "label": "Button 1 URL"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "2 Blocks Grid",
      "category": "Custom",
      "blocks": [
        {
          "type": "content"
        }
      ]
    }
  ]
}
{% endschema %}

<section class="page-width two_blocks_grid-section-container">
  {% for block in section.blocks %}
    <div class="two_blocks_grid-section">
      <div class="two_blocks_grid-section-left">
        <h2 class="section-heading">{{ block.settings.heading }}</h2>
        <p>{{ block.settings.sub_heading }}</p>
        <div>
          <a href="{{ block.settings.url_1 }}">{{ block.settings.button_1 }}</a>
        </div>
      </div>
      <div class="two_blocks_grid-section-right">
        <img src="{{ block.settings.image | img_url: 'master' }}" alt="Try at Home">
      </div>
    </div>
  {% endfor %}
</section>
<style>
  .two_blocks_grid-section-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    overflow: hidden;
    gap: 20px;
  }
  .two_blocks_grid-section {
    display: flex;
    overflow: hidden;
    width: 50%;
    position: relative;
  }
  .two_blocks_grid-section-right {
    position: absolute;
    width: 100%;
    z-index: -1;
  }
  .two_blocks_grid-section-right img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
  .two_blocks_grid-section-left {
    padding: 100px 40px;
  }
  .two_blocks_grid-section-left h2 {
    color: #fff;
    font-size: 2rem;
    text-align: left !important;
    margin: 0 !important;
  }
  .two_blocks_grid-section-left p {
    color: #fff;
    margin: 10px 0 20px;
    font-weight: 300;
    font-size: 1.4rem;
  }
  .two_blocks_grid-section-left a {
    text-decoration: none;
    color: #fff;
    border: solid 1px #fff;
    padding: 13px 35px;
    font-size: 1.4rem;
  }
  @media (max-width: 756px) {
    .two_blocks_grid-section-container {
      flex-direction: column;
    }
    .two_blocks_grid-section {
      width: 100%;
      flex-direction: column;
    }
    .two_blocks_grid-section-right {
      width: 100%;
    }
    .two_blocks_grid-section-left {
      padding: 40px;
      text-align: center;
    }
    .two_blocks_grid-section-left h2 {
      text-align: center !important;
    }
  }
</style>
{% schema %}
{
  "name": "2 Blocks Grid",
  "blocks": [
    {
      "type": "content",
      "name": "Content Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Section Heading",
          "default": "Get your own design"
        },
        {
          "type": "text",
          "id": "sub_heading",
          "label": "Sub Heading",
          "default": "Have another design in mind? Something from a website or a magazine perhaps?"
        },
        {
          "type": "text",
          "id": "button_1",
          "label": "Button 1 Text",
          "default": "Start Designing"
        },
        {
          "type": "url",
          "id": "url_1",
          "label": "Button 1 URL"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "2 Blocks Grid",
      "category": "Custom",
      "blocks": [
        {
          "type": "content"
        }
      ]
    }
  ]
}
{% endschema %}

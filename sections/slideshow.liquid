<script>
  document.addEventListener('DOMContentLoaded', function () {
    const bannerLinks = document.querySelectorAll('a.banner-link');

    bannerLinks.forEach((link) => {
      link.addEventListener('click', function (e) {
        const img = link.querySelector('img');
        if (!img) return;

        const bannerAlt = img.alt || 'No Alt Text';
        const bannerSrc = img.currentSrc || img.src || 'Unknown Image URL';
        const destinationUrl = link.href || '#';

        // Prevent immediate redirection
        e.preventDefault();

        // Customer info from global object
        const customer = window.customer || {};
        const address = customer.default_address || {};

        // ✅ Google Analytics
        gtag('event', 'home_banner_click', {
          banner_alt_text: bannerAlt,
          banner_image_url: bannerSrc,
          banner_destination_url: destinationUrl,
          page_title: document.title,
          page_location: window.location.href,
          customer_id: customer.id || null,
          customer_email: customer.email || null,
          customer_name: `${customer.first_name || ''} ${customer.last_name || ''}`.trim(),
          customer_phone: customer.phone || null,
          customer_address: `${address.address1 || ''}, ${address.city || ''}, ${address.province || ''}, ${
            address.zip || ''
          }, ${address.country || ''}`.trim(),
        });

        // ✅ Meta Pixel
        if (typeof fbq === 'function') {
          fbq('trackCustom', 'home_banner_click', {
            banner_alt_text: bannerAlt,
            banner_image_url: bannerSrc,
            banner_destination_url: destinationUrl,
            page_title: document.title,
            page_location: window.location.href,
            customer_id: customer.id || null,
            customer_email: customer.email || null,
            customer_name: `${customer.first_name || ''} ${customer.last_name || ''}`.trim(),
            customer_phone: customer.phone || null,
            customer_address: `${address.address1 || ''}, ${address.city || ''}, ${address.province || ''}, ${
              address.zip || ''
            }, ${address.country || ''}`.trim(),
          });
        }

        console.log('Sent GA4 event: home_banner_click with customer data');

        // Delay redirect to allow GA4 call
        setTimeout(() => {
          window.location.href = destinationUrl;
        }, 300); // Adjust as needed
      });
    });
  });
</script>

